<h1>ユーザ情報編集ページ</h1>

<div class="row">
    <aside class="col-sm-6">
      <%= form_with(model: @user, local: true) do |f| %>
        <div class="form-group">
          <%= f.text_area :name, class: 'form-control', rows: 2 %>
        </div>
        <%= f.submit 'Post', class: 'btn btn-primary btn-block' %>
      <% end %>
    </aside>
</div>